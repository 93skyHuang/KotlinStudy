<resources>
    <style name="normalBtnStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_normal_bg</item>
        <item name="android:textSize">@dimen/text_sp_30</item>
    </style>

    <style name="SuperTextViewNormal">
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="sDividerLineColor">@color/divider_line_color</item>
        <item name="sDividerLineHeight">@dimen/divider_line_height</item>
        <item name="sLeftTextSize">18sp</item>
        <item name="sRightLines">1</item>
        <item name="sRightViewGravity">right_center</item>
        <item name="sLeftViewMarginLeft">@dimen/space_margin_rl</item>
        <item name="sLeftTextColor">@color/mainColor</item>
        <item name="sRightTextSize">16sp</item>
        <item name="sBackgroundDrawableRes">@drawable/common_white_selector</item>
        <item name="android:clickable">true</item>
        <item name="sUseRipple">false</item>
        <item name="sLeftIconMarginLeft">@dimen/space_margin_rl</item>
        <item name="sRightTextColor">@color/app_minor_text_color</item>
        <item name="sDividerLineType">both</item>
        <item name="sRightTextGravity">right</item>
    </style>


    <style name="SuperTextViewTop" parent="SuperTextViewNormal">

        <item name="sDividerLineType">both</item>
        <item name="sBottomDividerLineMarginLeft">@dimen/space_margin_rl</item>
        <item name="sBottomDividerLineMarginRight">0dp</item>
    </style>

    <style name="SuperTextViewSinge" parent="SuperTextViewNormal">
        <item name="sDividerLineType">both</item>
        <item name="sBottomDividerLineMarginLeft">0dp</item>
        <item name="sBottomDividerLineMarginRight">0dp</item>
    </style>

    <style name="SuperTextViewCenter" parent="SuperTextViewNormal">
        <item name="sDividerLineType">bottom</item>
        <item name="sBottomDividerLineMarginLeft">@dimen/space_margin_rl</item>
        <item name="sBottomDividerLineMarginRight">0dp</item>
    </style>

    <style name="SuperTextViewBottom" parent="SuperTextViewNormal">
        <item name="sDividerLineType">bottom</item>
        <item name="sBottomDividerLineMarginLeft">0dp</item>
        <item name="sBottomDividerLineMarginRight">0dp</item>
    </style>

</resources>
